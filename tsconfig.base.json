{
    "compilerOptions": {
        // "allowJs": true,
        "allowSyntheticDefaultImports": true,
        // "baseUrl": "src",
        "declaration": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "lib": [
            "esnext"
        ],
        "listEmittedFiles": false,
        "listFiles": false,
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": false,
        "noImplicitAny": true,
        "pretty": true,
        "resolveJsonModule": true,
        // "rootDir": "src",
        "skipLibCheck": true,
        "strict": true,
        "traceResolution": false,
        "types": [
            "node"
        ]
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules",
        "dist"
    ]
}